<h1>Listing traded_companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Current price</th>
      <th>N stocks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @traded_companies.each do |traded_company| %>
      <tr>
        <td><%= traded_company.name %></td>
        <td><%= traded_company.type %></td>
        <td><%= traded_company.current_price %></td>
        <td><%= traded_company.n_stocks %></td>
        <td><%= link_to 'Show', traded_company %></td>
        <td><%= link_to 'Edit', edit_traded_company_path(traded_company) %></td>
        <td><%= link_to 'Destroy', traded_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

