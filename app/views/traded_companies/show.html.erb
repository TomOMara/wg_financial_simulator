<%- model_class = TradedCompany -%>
<div class="page-header">
  <h1><%=t '.title', :default => TradedCompany %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @traded_company.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:type) %></dt>
      <dd><pre class="prettyprint"><%= @traded_company.type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:current_price) %></dt>
      <dd><pre class="prettyprint"><%= @traded_company.current_price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:n_stocks) %></dt>
      <dd><pre class="prettyprint"><%= @traded_company.n_stocks %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              traded_companies_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_traded_company_path(@traded_company), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              traded_company_path(@traded_company),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

