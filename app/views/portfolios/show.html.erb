<%- model_class = Portfolio -%>
<div class="page-header">
  <h1><%=t '.title', :default => Portfolio %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cash_holding) %></dt>
      <dd><pre class="prettyprint"><%= @portfolio.cash_holding %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:net_worth) %></dt>
      <dd><pre class="prettyprint"><%= @portfolio.net_worth %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              portfolios_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_portfolio_path(@portfolio), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              portfolio_path(@portfolio),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

